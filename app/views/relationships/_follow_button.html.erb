<% unless current_user == user %>
  <% if current_user.following?(user) %>
    
      <% if mode %>
        <%= link_to 'フォロー外す', relationship_path(user.id), method: :delete, class: "btn btn-primary" %>
      <% else %>
        <%= link_to 'フォロー外す', relationship_path(user.id), method: :delete %>
      <% end %>
    
  <% else %>
    
      <% if mode %>
        <%= link_to 'フォローする', relationships_path(id: user.id), method: :post, class: "btn btn-success" %>
      <% else %>
        <%= link_to 'フォローする', relationships_path(id: user.id), method: :post %>
      <% end %>
    
  <% end %>
<% end %>